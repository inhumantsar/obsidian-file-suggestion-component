{
  "compilerOptions": {
    "types": [
      "jest",
      "node",
    ],
    "target": "ES6",
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "inlineSources": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "src": [
        "src/*",
        "tests/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*",
  ],
  "exclude": [
    "node_modules/*"
  ],
}